{
  "name": "show-more-read",
  "version": "1.1.0",
  "main": "dist/js/showMore.js",
  "description": "JavaScript library that truncates text, list or table by chars, elements or rows",
  "author": "Grzegorz Tomicki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomik23/show-more/issues"
  },
  "homepage": "https://github.com/tomik23/show-more#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomik23/show-more.git"
  },
  "scripts": {
    "dev": "concurrently \"yarn sass:dev\"  \"yarn sass:prod\" \"yarn watch\"",
    "prod": "yarn build && yarn sass:prod  && yarn postcss && yarn postcss:prod",
    "build": "rollup -c --environment PRODUCTION",
    "watch": "rollup -c -w",
    "sass:prod": "sass --no-source-map sources/scss:docs",
    "sass:dev": "sass --watch sources/scss:docs",
    "postcss": "postcss docs/**/*.css --dir docs",
    "postcss:prod": "postcss --ext min.css docs/show-more.css --dir dist/css"
  },
  "keywords": [
    "show-more/less",
    "text",
    "lists",
    "tables",
    "truncate-text",
    "truncate-text-with-html"
  ],
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/preset-env": "^7.16.4",
    "@rollup/plugin-babel": "^5.3.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "core-js": "^3.19.1",
    "cssnano": "^5.0.11",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "prettier": "^2.4.1",
    "rollup": "^2.60.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.43.4"
  }
}
