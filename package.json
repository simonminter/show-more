{
  "name": "show-more",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Grzegorz Tomicki",
  "scripts": {
    "dev": "concurrently \"yarn sass:dev\" \"yarn watch\"",
    "prod": "yarn build && yarn sass:prod",
    "build": "rollup --config --environment PRODUCTION",
    "watch": "rollup --config --watch",
    "sass:prod": "node-sass ./sources/style.scss ./docs/style.min.css --output-style compressed",
    "sass:dev": "node-sass ./sources/style.scss ./docs/style.min.css -w"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "concurrently": "^5.2.0",
    "core-js": "^3.6.5",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "rollup": "^2.10.4",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-delete": "^1.2.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.3.0"
  }
}